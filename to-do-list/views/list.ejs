<%- include("header") -%>

        <div class="box" id="heading">
            
            <h1><%= list %></h1>
        </div>
        <div class="box">
            <p class="heading">To Do List</p>
                <% for(let i=0; i<itemsList.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p><%= itemsList[i] %></p>
                </div>
                <% } %>
            <form action="/" method="post" class="item">
                <input type="text" name="newItem" placeholder="Do something" autocomplete="off"/>
                <button type="submit" name="button" value=<%= list %>>+</button>
            </form>
        </div>
	
<%- include("footer") -%>